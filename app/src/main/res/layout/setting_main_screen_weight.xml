<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/setting_main_screen_weight1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="324dp"
        android:layout_height="68dp"
        android:ems="10"
        android:gravity="center"
        android:text="体重　設定"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/setting_main_screen_weight_button1"
        android:layout_width="87dp"
        android:layout_height="68dp"
        android:text="＜"
        android:textColor="#808080"
        android:textSize="20dp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/setting"
        tools:layout_editor_absoluteY="0dp" />


    // textで体重が入力出来るようにする
    <EditText
        android:id="@+id/setting_main_screen_weight2"
        android:layout_width="256dp"
        android:layout_height="160dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="227dp" />

    <TextView
        android:id="@+id/setting_main_screen_weight3"
        android:layout_width="74dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="㎏"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="352dp" />

    <Button
        android:id="@+id/setting_main_screen_weight_button2"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="キャンセル"
        android:textColor="#808080"
        android:textSize="20dp"
        app:backgroundTint="#FFFFFF"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="436dp" />

    <Button
        android:id="@+id/setting_main_screen_weight_button3"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="OK"
        android:textSize="20dp"
        android:textColor="#808080"
        app:backgroundTint="#FFFFFF"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="436dp" />

</androidx.constraintlayout.widget.ConstraintLayout>